
@{
    ViewBag.Title = "HowToRegister";
    Layout = "~/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript">
    $.noConflict();
    jQuery().ready(function () {
        jQuery('#tabHowToRegister').addClass('active');
    });
    jQuery(document).ready(function () {
        var width = jQuery("#DivHowToRegister").width() - 30;
        var height = width - 150;
        if (jQuery(window).width() < 900) {
            jQuery("#DivHowToRegister img").css({ "width": width, "height": height });
        }
        else {
            jQuery("#DivHowToRegister img").css({ "width": "800px", "height": "450px" });
        }
    });
</script>
<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div id="DivHowToRegister">
                <h1 class="FormHeading" style="padding-bottom:50px; font-family:inherit">Please follow below steps for registration</h1><br />

                <label> Step1: Please click on my account button as shown below</label>
                <img src="~/Content/HelpImges/UR1.JPG" style="height:450px;width:800px;border:1px solid black" />
                <br />
                <img src="~/Content/HelpImges/UR2.PNG" style="height:450px;width:800px;border:1px solid black" />
                <label>Step2: Please enter your details as shown below and click on submit button</label>
                <img src="~/Content/HelpImges/UR3.PNG" style="height:450px;width:800px;border:1px solid black" /><br />
                <img src="~/Content/HelpImges/UR4.PNG" style="height:450px;width:800px;border:1px solid black" /><br />
                <label>Step3: After submitting your details, you will receive OTP on your mobile number</label>
                <img src="~/Content/HelpImges/UR5.PNG" style="height:450px;width:800px;border:1px solid black" />
                <label>Step4: After submitting OTP, this will redict you to below page.</label>
                <img src="~/Content/HelpImges/UR6.PNG" style="height:450px;width:800px;border:1px solid black"/>

            </div>
        </div>
    </div>
</div>



