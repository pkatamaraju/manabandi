@{
    ViewBag.Title = "HowToPost";
    Layout = "~/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript">
    $.noConflict();
    jQuery().ready(function () {
        jQuery('#tabHowToBook').addClass('active');
    });

    jQuery(document).ready(function () {
        var width = jQuery("#DivHowToRegister").width()-30;
        var height = width - 150;
        if (jQuery(window).width() < 900) {
        jQuery("#DivHowToRegister img").css({ "width": width, "height": height });
        }
        else {
            jQuery("#DivHowToRegister img").css({ "width": "800px", "height": "450px" });
        }
    });
</script>
<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div id="DivHowToRegister">
                <h1 class="FormHeading" style="padding-bottom:50px;font-family:inherit">Please follow below steps for booking a vehicle.</h1><br />

                
                        <label>Step1: Click on  book a vehicle button as shown in below image.</label> 
                        <img src="~/Content/HelpImges/BK1.PNG" style="height:380px;width:800px;border:1px solid black" />
                        <label>Step2: Enter Details as per your requirement and click on submit button</label>
                        <img src="~/Content/HelpImges/BK3.PNG" style="height:450px;width:800px;border:1px solid black" />
                        <label>Step3: After submitting the details you will get OTP on your mobile number.</label>
                        <img src="~/Content/HelpImges/BK4.PNG" style="height:300px;width:800px;border:1px solid black" />
                        <label>Step4: After submitting OTP, it will redirect to below page</label>
                        <img src="~/Content/HelpImges/BK5.PNG" style="height:450px;width:800px;border:1px solid black" />

                   
            </div>
        </div>
    </div>
</div>

